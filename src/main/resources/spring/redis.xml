<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:database_redis.properties" ignore-unresolvable="true"/>

    <!--jedisPoolConfig的bean配置-->
    <bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxTotal">
            <value>100</value>
        </property>
        <property name="maxIdle">
            <value>100</value>
        </property>
        <property name="maxWaitMillis">
            <value>10000</value>
        </property>
        <property name="testOnBorrow">
            <value>true</value>
        </property>
    </bean>

    <!--jedisConnectionFactory的bean配置-->
    <bean id="jedisConnectionFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
        <property name="hostName">
            <value>${database.hostName}</value>
        </property>
        <property name="port">
            <value>${database.port}</value>
        </property>
        <property name="password">
            <value>${database.password}</value>
        </property>
        <constructor-arg index="0" ref="jedisPoolConfig"/>
    </bean>

    <!--redisTemplate的bean配置-->
    <bean id="redisTemplate" class="org.springframework.data.redis.core.StringRedisTemplate">
        <property name="connectionFactory" ref="jedisConnectionFactory"/>
    </bean>
</beans>